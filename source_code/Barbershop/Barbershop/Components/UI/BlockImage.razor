<Div  Style="@StyleParameter" />

@code {
    [Parameter]
    public string ImageHref { get; set; } = "";
    [Parameter]
    public string Style { get; set; } = "";
    string StyleParameter = "";

    protected override void OnParametersSet()
    {
        StyleParameter = $"background: url('{ImageHref}');{Style}";

    }
}
