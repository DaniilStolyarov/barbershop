{
    private Theme theme = new Theme
        {
            ColorOptions = new()
            {
                Primary = "#057dcd",
                Secondary = "#FEFAF6"
            }
            ,
            BackgroundOptions = new()
            {
                Primary = "#057dcd",
                Secondary = "#e8eef1",
                Dark = "#070F2B"
            },
            TextColorOptions = new()
            {

            }
            
        };
}